{
  "extends": [
    "config:base",
    "monorepo:storybook",
    ":label(renovate)",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone"
  ],
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "groupName": "dependencies"
    },
    {
      "depTypeList": ["devDependencies"],
      "groupName": "devDependencies"
    },
    {
      "extends": "monorepo:babel",
      "groupName": "Babel packages",
      "packageNames": ["core-js", "regenerator-runtime"]
    },
    {
      "extends": [
        "packages:eslint",
        "packages:stylelint",
        "packages:tslint"
      ],
      "groupName": "Linter packages",
      "packageNames": ["prettier", "husky", "lint-staged"],
      "packagePatterns": ["^eslint-config-.*", "^eslint-plugin-.*"]
    },
    {
      "groupName": "Webpack packages",
      "packageNames": ["webpack", "webpack-cli", "webpack-dev-server"],
      "packagePatterns": ["^.*-loader$"]
    },
    {
      "extends": [
        "monorepo:graphql-modules",
        "monorepo:graphqlcodegenerator",
        "packages:apollographql"
      ],
      "groupName": "GraphQL and Apollo packages"
    },
    {
      "groupName": "React packages",
      "packageNames": ["react"],
      "packagePatterns": ["^react-.*"]
    }
  ]
}
